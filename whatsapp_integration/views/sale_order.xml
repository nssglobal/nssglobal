<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sale_order_inherit_form_view">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//header" position="inside">
                    <field name="is_whatsapp" invisible="1"/>
                    <button name="action_so_send_whatsapp" string="Send by Whatsapp" type="object" invisible="1" attrs="{'invisible':[('is_whatsapp', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
